package studentProgramme;
import java.util.*;

public class StudentProgram {

	
	public static void main(String[] args) {
		
		int n, total = 0;
		int  cost = 1500;
		int GPA = 0;
		int totalCost = 0;
		double balance = 0.0;
		

		
		Scanner myObj = new Scanner(System.in);
	    System.out.println("Enter Student Name :");
	    String studentName = myObj.nextLine();
	    
	
	    System.out.println("Enter Course Name :");
	    String course = myObj.nextLine();
	    

	    
	    
	    
        System.out.print("No of Subjects for your " + course + " Course :");
        n = myObj.nextInt();
        
        int marks[] = new int[n];
        System.out.println("Enter semester marks for " + n + " Subjects");
        for(int i = 0; i < n; i++)
        {
            marks[i] = myObj.nextInt();
            total = total + marks[i];
             GPA = total / n;
             totalCost = n * cost;
             
             
             
             balance = totalCost - (totalCost*0.15);
           
        }
        
        
        
        System.out.println("Sum:"+total);
        System.out.println("GPA:"+GPA);
        System.out.println("Course Amount:"+totalCost);
        System.out.println("Course Amount:"+ balance);
        
        if (GPA < 50) {
			System.out.println("We regret to inform that You Failed:-(");
			System.out.println("you Owe:"+ totalCost);
		}else if(GPA > 50 && GPA < 75){
			System.out.println(" You Passed");
			balance = totalCost - (totalCost*0.10);
			System.out.println("You owe:"+ balance);
		}
		else {
			System.out.println("**** Excellent you Qualify for 15% discount ****");
			balance = totalCost - (totalCost*0.15);
			System.out.println("You owe:"+ balance);
			
		}
	    
	    
//	    System.out.println("Enter " + subject + " Test Mark");
//	    int testMark = myObj.nextInt();
//	    
//	    
//	    System.out.println("Enter " + subject + " Exam Mark");
//	    int examMark = myObj.nextInt();
	}
}
